{
  "manifest_version": 3,
  "name": "Browser Copilot Agent",
  "version": "1.0.0",
  "description": "Connect your browser to GitHub Copilot for automated browser control and testing",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "webNavigation",
    "webRequest",
    "debugger",
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:8080/*",
    "ws://localhost:8080/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
